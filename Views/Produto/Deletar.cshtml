@model ProjetoMVC.Models.Produto

@{
    ViewData["Title"] = "Deletar Contato";
}

<h1 style="color: red">Deseja Realmente Deletar Esse contato? Essa operação é irreversível</h1>

</hr>

<div>
    <dl class="row">
        @* Nome *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Nome)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Nome)
        </dt>
        @* Valor *@
         <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Valor)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Valor)
        </dt>
        @* Validade *@
         <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Validade)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Validade)
        </dt>
        @* Ativo *@
         <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Ativo)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Ativo)
        </dt>
    </dl>
</div>

<form asp-action="Deletar">
    <input type="submit" value="Deletar" class="btn btn-danger"/>
</form>

<br>
<a asp-action="Index">Voltar</a>
